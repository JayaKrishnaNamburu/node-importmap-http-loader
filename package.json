{
  "name": "jspm-node-import-map-loader",
  "version": "0.0.1",
  "description": "A Node.js loader for JSPM import maps",
  "author": "Jaya Krishna Namburu <namburu1995@gmail.com>",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": "./index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist config",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "default": "npm install --no-save react-dom@17.0.2 @teleporthq/teleport-project-generator-react@0.25.4 @teleporthq/teleport-project-generator-preact@0.20.0 chalk express morgan react-router@5.2.1 react-router-dom@5.2.1 && node test.js",
    "lint": "eslint src --ext .ts",
    "lint-fix": "npm run lint --fix",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run build",
    "release": "release-it",
    "server": "npm run server:build && npm run server:start",
    "server:build": "echo 'Building...' && npm run build && echo 'Build complete.'",
    "server:start": "echo 'Starting server...' && node --loader ./loader.js test-server.js && echo 'Server started.'",
    "test": "concurrently --kill-others \"npm run test:unit\" \"npm run test:e2e\"",
    "test:e2e": "npm run build && node --loader ./loader.js test.js",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "dependencies": {
    "@jspm/import-map": "^1.0.5",
    "node-fetch": "3.3.1",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@types/node-fetch": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "chalk": "^5.2.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "morgan": "^1.10.0",
    "prettier": "^2.8.3",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "tsup": "^6.7.0",
    "type-fest": "^3.6.0",
    "typescript": "^4.9.4",
    "vitest": "^0.29.7"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --cache --fix",
      "vitest related --run"
    ]
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release"
    }
  }
}
