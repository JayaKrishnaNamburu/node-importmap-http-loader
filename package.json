{
  "name": "@jspm/node-importmap-loader",
  "version": "0.0.1",
  "description": "A Node.js loader for JSPM import maps",
  "author": "Jaya Krishna Namburu <namburu1995@gmail.com>",
  "type": "module",
  "main": "dist/loader.js",
  "types": "dist/loader.d.ts",
  "exports": {
    ".": "dist/loader.js"
  },
  "dependencies": {
    "@jspm/generator": "^1.1.9",
    "@jspm/import-map": "^1.0.7",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@swc/core": "^1.3.68",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.4.0",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "chalk": "^5.3.0",
    "chomp": "^0.2.17",
    "concurrently": "^8.2.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "morgan": "^1.10.0",
    "prettier": "^3.0.0",
    "release-it": "^16.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "tsup": "^7.1.0",
    "type-fest": "^3.12.0",
    "typescript": "^5.1.6"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ],
      "type-enum": [
        2,
        "always",
        [
          "chore",
          "feat",
          "fix",
          "docs",
          "refactor",
          "revert",
          "breaking"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prefer-destructuring": [
        "error",
        {
          "AssignmentExpression": {
            "array": false,
            "object": false
          }
        }
      ]
    }
  },
  "jest": {
    "testMatch": [
      "**/**/*.test.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!node:http)",
      "node_modules/(?!@jspm/import-map)"
    ],
    "transform": {
      "^.+\\.(ts)$": "@swc/jest"
    },
    "testEnvironment": "jest-environment-node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "cjs",
      "js",
      "mjs",
      "ts",
      "json"
    ],
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/loader.ts",
      "<rootDir>/src/utils.ts"
    ]
  },
  "prettier": {
    "printWidth": 120
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release"
    }
  }
}
